    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".TimelineActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvTweets">

    </ListView>

    <ProgressBar
