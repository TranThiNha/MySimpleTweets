<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="200dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/ivCoverImage"
            android:scaleType="centerCrop"
            android:background="#FFCDD2"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_profile"
            android:id="@+id/image"
            android:scaleType="fitCenter"
            />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/tvName"
            android:text="TRAN THI NHA"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMail"
            android:layout_gravity="center"
            android:text="'@'tranthinha160296"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNumberTweet"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNumberTweet"
            android:text="TWEETS"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNumberFollow"
            android:layout_marginLeft="80dp"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_below="@+id/tvNumberFollow"
            android:text="FOLLOWING"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNumberFollowers"
            android:layout_marginLeft="168dp"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="168dp"
            android:layout_below="@+id/tvNumberFollowers"
            android:text="FOLLOWERS"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="256dp"
            android:background="@drawable/borber_button"
            android:text="change profile"
            android:textStyle="normal"
            android:textColor="#1565C0"
            android:textSize="8dp"
            android:id="@+id/btnChangeProfile"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="256dp"
            android:background="@drawable/borber_button"
            android:text="change profile"
            android:textStyle="normal"
            android:textColor="#1565C0"
            android:textSize="8dp"
            android:id="@+id/btnFriend"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="tweets"
        android:textSize="24sp"
        android:textColor="@android:color/holo_blue_light"/>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:id="@+id/tablayoutProfile">
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:id="@+id/pagerProfile"
        android:background="#E0F7FA">

    </android.support.v4.view.ViewPager>
</LinearLayout>
</ScrollView>