<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:divider="#90A4AE"
    android:dividerHeight="1dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:id="@+id/ivProfileImage"
            android:padding="10dp"
            android:src="@drawable/ic_launcher"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="username"
                android:layout_height="wrap_content"
                android:id="@+id/tvUserName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvRelativeTimestamp"
                android:text="1"
                />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="body"
        android:padding="10dp"
        android:autoLink="all"
        android:layout_height="wrap_content"
        android:id="@+id/tvBody"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:id="@+id/tvDetailReTweet"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="12dp"
            android:text="RETWEET"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDetailNumberOfLike"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:text="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="LIKE"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:background="@drawable/ic_reply"
            android:id="@+id/btnDetailReply"
            android:layout_marginLeft="25dp"
            />

        <ImageButton
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:layout_marginLeft="35dp"
            android:id="@+id/btnDetailRetweet"
            android:background="@drawable/ic_retweet"/>

        <ImageButton
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:layout_marginLeft="35dp"
            android:id="@+id/btnDetailLike"
            android:background="@drawable/ic_like"/>

    </LinearLayout>

</LinearLayout>
